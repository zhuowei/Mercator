<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
<include layout="@layout/homepagead"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Takes /sdcard/Mercator/input/terrain.png and /sdcard/Mercator/input/items.png, outputs to /sdcard/Mercator/unstitch"
    />
<Button android:id="@+id/main_unstitch_legacy_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Unstitch old-style textures"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Takes /sdcard/Mercator/unstitch/blocks, outputs to /sdcard/Mercator/output/terrain-atlas.tga"
    />
<Button android:id="@+id/main_stitch_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Stitch terrain-atlas.tga"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Takes /sdcard/Mercator/input/terrain-atlas.tga, output to /sdcard/Mercator/unstitch/blocks"
    />
<Button android:id="@+id/main_unstitch_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Unstitch terrain-atlas.tga"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Takes /sdcard/Mercator/unstitch/items, outputs to /sdcard/Mercator/output/items-opaque.tga"
    />
<Button android:id="@+id/main_stitch_items_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Stitch items-opaque.tga"/>
<TextView  
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="Takes /sdcard/Mercator/input/items-opaque.tga, output to /sdcard/Mercator/unstitch/items"
    />
<Button android:id="@+id/main_unstitch_items_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Unstitch items-opaque.tga"/>

<Button android:id="@+id/main_tga_to_png_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/main_menu_tga_to_png"/>

<Button android:id="@+id/main_png_to_tga_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/main_menu_png_to_tga"/>

</LinearLayout>
</ScrollView>

